{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "auditStorageAccountName": {
      "type": "string",
      "defaultValue": "audit",
      "metadata": {
        "description": "Array of services storage names for the storage accounts."
      }
    },
    "keyVaultLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location where the services storage account should be deployed."
      }
    },
    "companyName": {
      "type": "string",
      "metadata": {
        "description": "Name of the company to be appended to storage account names."
      }
    },
    "locationArray": {
      "type": "array",
      "defaultValue": ["eastus", "northeurope"],
      "metadata": {
        "description": "Array of locations for the storage accounts."
      }
    },
    "nsgStorageAccountName": {
      "type": "string",
      "defaultValue": "nsg",
      "metadata": {
        "description": "Name of the nsg storage account."
      }
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Specifies the name of the key vault."
      }
    },
    "tenantId": {
      "type": "string",
      "defaultValue": "[subscription().tenantId]",
      "metadata": {
        "description": "Specifies the Azure Active Directory tenant ID that should be used for authenticating requests to the key vault."
      }
    },
    "skuName": {
      "type": "string",
      "defaultValue": "standard",
      "allowedValues": ["standard", "premium"],
      "metadata": {
        "description": "Specifies whether the key vault is a standard vault or a premium vault."
      }
    }
  },
  "resources": [
    {
      "copy": {
        "name": "auditStorage",
        "count": "[length(parameters('locationArray'))]"
      },
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-09-01",
      "name": "[format('{0}{1}{2}', parameters('auditStorageAccountName'), parameters('locationArray')[copyIndex()], parameters('companyName'))]",
      "location": "[string(parameters('locationArray')[copyIndex()])]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "networkAcls": {
          "bypass": "Logging,Metrics,AzureServices"
        }
      }
    },
    {
      "copy": {
        "name": "nsgStorage",
        "count": "[length(parameters('locationArray'))]"
      },
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-09-01",
      "name": "[format('{0}{1}{2}', parameters('nsgStorageAccountName'), parameters('locationArray')[copyIndex()], parameters('companyName'))]",
      "location": "[string(parameters('locationArray')[copyIndex()])]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {}
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2021-11-01-preview",
      "name": "[parameters('keyVaultName')]",
      "location": "[parameters('keyVaultLocation')]",
      "properties": {
        "enableRbacAuthorization": true,
        "tenantId": "[parameters('tenantId')]",
        "enableSoftDelete": true,
        "softDeleteRetentionInDays": 90,
        "sku": {
          "name": "[parameters('skuName')]",
          "family": "A"
        },
        "networkAcls": {
          "defaultAction": "Allow",
          "bypass": "AzureServices"
        }
    },
      "dependsOn": [
        "nsgStorage",
        "auditStorage"
      ]
    },
    {
      "copy": {
        "name": "auditConnectionString",
        "count": "[length(parameters('locationArray'))]"
      },
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2021-11-01-preview",
      "name": "[format('{0}/auditCS-{1}', parameters('keyVaultName'), parameters('locationArray')[copyIndex()])]",
      "properties": {
        "value": "success"
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
      ]
    },
    {
      "copy": {
        "name": "nsgConnectionString",
        "count": "[length(parameters('locationArray'))]"
      },
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2021-11-01-preview",
      "name": "[format('{0}/nsgCS-{1}', parameters('keyVaultName'), parameters('locationArray')[copyIndex()])]",
      "properties": {
        "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('locationArray')[copyIndex()], ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', format('{0}{1}{2}', parameters('nsgStorageAccountName'), parameters('locationArray')[copyIndex()], parameters('companyName'))), '2022-09-01').keys[0].value,';EndpointSuffix=core.windows.net')]"  

      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
      ]
    }
  ],
  "outputs": {
    "auditStorageIDs": {
      "type": "array",
      "copy": {
        "count": "[length(parameters('locationArray'))]",
        "input": "[resourceId('Microsoft.Storage/storageAccounts', format('{0}{1}{2}', parameters('auditStorageAccountName'), parameters('locationArray')[copyIndex()], parameters('companyName')))]"
      }
    },
    "nsgStorageIDs": {
      "type": "array",
      "copy": {
        "count": "[length(parameters('locationArray'))]",
        "input": "[resourceId('Microsoft.Storage/storageAccounts', format('{0}{1}{2}', parameters('nsgStorageAccountName'), parameters('locationArray')[copyIndex()], parameters('companyName')))]"
      }
    },
    "keyVaultID": {
      "type": "string",
      "value": "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
    }
  }
}
